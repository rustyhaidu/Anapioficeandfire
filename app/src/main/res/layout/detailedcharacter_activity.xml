        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/characterHeaderMother"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/motherHeader"
            android:background="@drawable/customborder"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/characterMother"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/motherValue"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/characterHeaderSpouse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/spouseHeader"
            android:background="@drawable/customborder"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/characterSpouse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/spouseValue"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/holo_red_light"            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/characterHeaderAllegiances"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/customborder"
            android:text="@string/allegiencesHeader"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/characterAllegiances"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/customborder"
            android:hint="@string/allegiancesValue"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/characterHeaderBooks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/booksHeader"
            android:background="@drawable/customborder"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/characterBooks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/booksValue"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/holo_red_light"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/characterHeaderPovBooks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/povbooksHeader"
            android:background="@drawable/customborder"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/characterPovBooks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/povbooksValue"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/characterHeaderTvSeries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/tvseriesHeader"
            android:background="@drawable/customborder"
            android:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/characterTvSeries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/tvseriesValue"
